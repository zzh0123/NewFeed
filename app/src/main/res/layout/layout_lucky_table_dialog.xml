<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:gravity="center">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/tv_buy_luck_draw_coupon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="购买抽奖券"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bt_rectangle_shape_golden"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_luck_draw_coupon_count"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="您有抽奖券0张"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bt_rectangle_shape_golden"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="5dp"/>
    <ImageView
        android:id="@+id/no"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/cancle"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_panel_view"
        android:layout_width="646px"
        android:layout_height="646px"
        android:layout_gravity="center">

        <ys.app.feed.widget.luckyturntable.LuckyMonkeyPanelView
            android:id="@+id/lucky_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--<ImageView-->
            <!--android:id="@+id/id_draw_btn"-->
            <!--android:layout_width="183.33px"-->
            <!--android:layout_height="165.33px"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/bg_lucky_draw_btn_selector" />-->
        <TextView
            android:layout_width="183.33px"
            android:layout_height="165.33px"
            android:layout_centerInParent="true"
            android:text="100%中奖"
            android:textColor="@color/bg_red"
            android:background="@color/bg_golden"
            android:gravity="center"
            android:textSize="15sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/tv_uck_draw_one"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="抽一次"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bt_rectangle_shape_golden"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_uck_draw_ten"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="十连抽"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bt_rectangle_shape_golden"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="5dp"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>

