<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.GetbackPasswordActivity"
    android:orientation="vertical">

    <include layout="@layout/layout_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请填写你要找回/设置密码的账号"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"/>

        <ys.app.feed.widget.ClearEditText
            android:id="@+id/et_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:hint="请输入手机号"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:background="@drawable/et_bg_underline"
            android:drawableLeft="@null"
            android:drawableRight="@mipmap/ic_clear_all"
            android:maxLength="11"
            android:singleLine="true"
            android:digits="1234567890"
            android:inputType="phone|number"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/bt_next_step"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="下一步"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bt_rectangle_shape_grey"
            android:layout_marginTop="20dp"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

</LinearLayout>