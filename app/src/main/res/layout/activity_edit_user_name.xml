<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".my.EditUserNameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/back_grey" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="修改用户名"
            android:textColor="@color/text_black"
            android:textSize="20sp" />

    </RelativeLayout>

    <ys.app.feed.widget.ClearEditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint=""
        android:textSize="15sp"
        android:textColor="@color/text_black"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:background="@drawable/et_bg_underline"
        android:drawableLeft="@null"
        android:drawableRight="@mipmap/ic_clear_all"
        android:maxLength="11"
        android:singleLine="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:background="@color/bg_green2"
        android:gravity="center"
        android:text="保 存"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>