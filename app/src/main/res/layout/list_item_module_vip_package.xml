<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/ll_vip_package"
    android:background="@drawable/bt_rectangle_shape_golden2"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_vip_package_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15天"
        android:textColor="@color/text_black"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_vip_package_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="50"
        android:textColor="@color/text_golden2"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_vip_package_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="试用会员"
        android:textColor="@color/text_grey"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"/>
</LinearLayout>
