<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--1. 顶部标题栏-->
    <!--<include android:id="@+id/show_main_title" bottom_group_buy_person_num="@bottom_group_buy_person_num/title_layout">-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--2. 存放四个Fragment-->
        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"></LinearLayout>

        <!--3. 底部的四个选项菜单-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <!--四个部分都一样：ImageView + TextView-->

            <LinearLayout
                android:id="@+id/ll_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:layout_gravity="center"
                    android:src="@drawable/selector_tab1_img" />

                <TextView
                    android:id="@+id/tv_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="商城"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_tab_text"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:layout_gravity="center"
                    android:src="@drawable/selector_tab1_img" />

                <TextView
                    android:id="@+id/tv_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="配料"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_tab_text"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_third"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:layout_gravity="center"
                    android:src="@drawable/selector_tab1_img" />

                <TextView
                    android:id="@+id/tv_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="推广"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_tab_text"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fourth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:layout_gravity="center"
                    android:src="@drawable/selector_tab1_img" />

                <TextView
                    android:id="@+id/tv_fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="我的"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_tab_text"></TextView>
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

</LinearLayout>